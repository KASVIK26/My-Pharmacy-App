<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#312F2F"
    tools:context=".owner_add">

    <!-- Headline TextView -->
    <TextView
        android:id="@+id/headline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/tinos_reg"
        android:gravity="center"
        android:text="ADD PRODUCTS TO CATALOGUE"
        android:textColor="@color/btncolor"
        android:textSize="36sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Product Name Label -->
    <TextView
        android:id="@+id/p_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tinos_reg"
        android:text="PRODUCT NAME"
        android:textColor="@color/btncolor"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/headline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"/>

    <!-- Product Name EditText -->
    <EditText
        android:id="@+id/e_name"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/round_button"
        android:ems="10"
        android:fontFamily="@font/tinos_reg"
        android:hint="Enter Product Name"
        android:textColor="@color/black"
        android:textColorHint="#4C4949"
        app:layout_constraintTop_toBottomOf="@id/p_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="20dp"/>

    <!-- Capture Barcode Label -->
    <TextView
        android:id="@+id/p_capturebarcode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tinos_reg"
        android:text="CAPTURE BARCODE"
        android:textColor="@color/btncolor"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/e_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"/>

    <!-- Capture Barcode EditText -->
    <EditText
        android:id="@+id/e_scanbarcode"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/round_button"
        android:ems="10"
        android:textColor="@color/black"
android:textColorHint="#4C4949"
        android:fontFamily="@font/tinos_reg"
        android:hint="Scan Barcode"
        app:layout_constraintTop_toBottomOf="@id/p_capturebarcode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="20dp"/>

    <!-- Expiry Label -->
    <TextView
        android:id="@+id/p_expiry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tinos_reg"
        android:text="EXPIRY"
        android:textColor="@color/btncolor"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/e_scanbarcode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"/>

    <!-- Expiry EditText -->
    <EditText
        android:id="@+id/e_expiry"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/round_button"
        android:ems="10"
        android:fontFamily="@font/tinos_reg"
        android:hint="Enter Exp. Date"
        android:textColor="@color/black"
        android:textColorHint="#4C4949"
        app:layout_constraintTop_toBottomOf="@id/p_expiry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="20dp"/>

    <!-- Discount Price (Small Quantity) Label -->
    <TextView
        android:id="@+id/p_dps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tinos_reg"
        android:text="DISCOUNT PRICE (SMALL QTY)"
        android:textColor="@color/btncolor"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/e_expiry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"/>

    <!-- Discount Price (Small Quantity) EditText -->
    <EditText
        android:id="@+id/e_dps"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/round_button"
        android:ems="10"
        android:fontFamily="@font/tinos_reg"
        android:hint="Enter Price"
        android:textColor="@color/black"
        android:textColorHint="#4C4949"
        app:layout_constraintTop_toBottomOf="@id/p_dps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="20dp"/>

    <!-- Discount Price (Bulk Quantity) Label -->
    <TextView
        android:id="@+id/p_dpb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tinos_reg"
        android:text="DISCOUNT PRICE (BULK QTY)"
        android:textColor="@color/btncolor"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/e_dps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"/>

    <!-- Discount Price (Bulk Quantity) EditText -->
    <EditText
        android:id="@+id/e_dpb"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/round_button"
        android:ems="10"
        android:fontFamily="@font/tinos_reg"
        android:hint="Enter Price"
        android:textColor="@color/black"
        android:textColorHint="#4C4949"
        app:layout_constraintTop_toBottomOf="@id/p_dpb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="20dp"/>

    <!-- Add Button -->
    <Button
        android:id="@+id/add"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/tinos_reg"
        android:text="Add"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/e_dpb" />

</androidx.constraintlayout.widget.ConstraintLayout>
