<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="380dp"
        android:layout_height="400dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/cardview_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtforgotyourpassword">

        <TextView
            android:id="@+id/txtname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/tinos_reg"
            android:text="NAME"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/etname"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etname"
            android:layout_width="329dp"
            android:layout_height="50dp"

            android:layout_marginStart="19dp"
            android:layout_marginTop="85dp"
            android:background="@drawable/color_button"
            android:fontFamily="@font/tinos_reg"
            android:hint="Enter Name"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#535353"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.8" />

        <EditText
            android:id="@+id/etemail"
            android:layout_width="329dp"
            android:layout_height="50dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="66dp"
            android:background="@drawable/color_button"
            android:fontFamily="@font/tinos_reg"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#535353"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etname"
            app:layout_constraintWidth_percent="0.8" />

        <TextView
            android:id="@+id/txtemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/tinos_reg"
            android:text="E-MAIL"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/etemail"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btngetpassword"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/purple_round_btn"
            android:fontFamily="@font/tinos_reg"
            android:text="Get Password"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etemail" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txtforgotyourpassword"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="31dp"
        android:fontFamily="@font/tinos_reg"
        android:text="forget your password"
        android:textColor="@color/btncolor"
        android:textSize="36sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>