<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/deletescrn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".owner_delete">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/gradient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_deleteproduct">

        <Button
            android:id="@+id/btndelete"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/ic_backg"
            android:fontFamily="@font/tinos_reg"
            android:text="Delete"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/e_name" />

        <EditText
            android:id="@+id/e_name"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/color_button"
            android:ems="10"
            android:fontFamily="@font/tinos_reg"
            android:hint="Enter Product Name"
            android:textColor="@color/black"
            android:textColorHint="#4C4949"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/p_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginBottom="13dp"
            android:fontFamily="@font/tinos_reg"
            android:text="PRODUCT NAME"
            android:textColor="@color/btncolor"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/e_name"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txt_deleteproduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/tinos_reg"
        android:text="DELETE PRODUCT"
        android:textColor="@color/btncolor"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Label TextView -->

    <!-- Product Name EditText -->

    <!-- Delete Button -->

</androidx.constraintlayout.widget.ConstraintLayout>
