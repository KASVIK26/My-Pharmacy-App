<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ownerupdate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <Button
        android:id="@+id/update"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/ic_backg"
        android:fontFamily="@font/tinos_reg"
        android:text="Update"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/e_udpb" />

    <TextView
        android:id="@+id/p_udps"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/tinos_reg"
        android:text="UPDATE DISCOUNT PRICE (SMALL QTY)"
        android:textColor="@color/btncolor"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/e_udps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.351"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/p_udpb"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/tinos_reg"
        android:text="UPDATE DISCOUNT PRICE (BULK QTY)"
        android:textColor="@color/btncolor"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/e_udpb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.351"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/e_udps"
        android:layout_width="300dp"
        android:layout_height="48dp"

        android:layout_marginTop="96dp"
        android:background="@drawable/color_button"
        android:ems="10"
        android:fontFamily="@font/tinos_reg"
        android:hint="Enter Price"
        android:textColor="@color/black"
        android:textColorHint="#4C4949"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.414"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/e_expiry" />

    <EditText
        android:id="@+id/e_udpb"
        android:layout_width="300dp"
        android:layout_height="48dp"

        android:layout_marginTop="96dp"
        android:background="@drawable/color_button"
        android:ems="10"
        android:fontFamily="@font/tinos_reg"
        android:hint="Enter Price"
        android:textColor="@color/black"
        android:textColorHint="#4C4949"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.414"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/e_udps" />

    <EditText
        android:id="@+id/e_expiry"
        android:layout_width="300dp"
        android:layout_height="48dp"

        android:layout_marginTop="62dp"
        android:background="@drawable/color_button"
        android:ems="10"
        android:fontFamily="@font/tinos_reg"
        android:hint="Enter Exp. Date"
        android:textColor="@color/black"
        android:textColorHint="#4C4949"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.414"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/e_capturebarcode" />

    <TextView
        android:id="@+id/p_expiry"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"

        android:fontFamily="@font/tinos_reg"
        android:text="UPDATE EXPIRY DATE"
        android:textColor="@color/btncolor"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/e_expiry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.351"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/e_capturebarcode"
        android:layout_width="300dp"
        android:layout_height="48dp"

        android:layout_marginTop="72dp"
        android:background="@drawable/color_button"
        android:ems="10"
        android:fontFamily="@font/tinos_reg"
        android:hint="Scan Barcode"
        android:textColor="@color/black"
        android:textColorHint="#4C4949"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.414"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_update" />

    <TextView
        android:id="@+id/p_name"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/tinos_reg"
        android:text="CAPTURE BARCODE"
        android:textColor="@color/btncolor"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/e_capturebarcode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.351"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:fontFamily="@font/tinos_reg"
        android:text="UPDATE PRODUCT"
        android:textColor="@color/btncolor"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>